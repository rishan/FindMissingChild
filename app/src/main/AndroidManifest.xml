<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beehyv.findmissingchild">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/missing_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:windowBackground="@drawable/splash_blurred"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PagerActivity"
            android:label="@string/title_activity_pager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UserDetails"
            android:label="@string/title_activity_user_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowBackground="@drawable/splash_blurred" />
        <activity android:name=".activities.AddedChildren"></activity>
    </application>

</manifest>